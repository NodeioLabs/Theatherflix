// manifest.json
{
    "manifest_version": 2,
    "name": "Theatherflix Extension",
    "version": "1.0",
    "description": "Extensión para mostrar recomendaciones personalizadas de películas y series.",
    "permissions": [
      "http://localhost:3000/api/recommendations/"
    ],
    "browser_action": {
      "default_popup": "index.html"
    },
    "icons": {
      "48": "icon.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
  
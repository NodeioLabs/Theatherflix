{
  "manifest_version": 3,
  "name": "Theaterflix Extension",
  "version": "1.0",
  "description": "Extension to display personalized recommendations for movies and series.",
  "action": {
    "default_popup": "popup/index.html"
  },
  "icons": {
    "48": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
